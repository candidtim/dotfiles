# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Cantarell 11

# colors to use
set $bg-color            #404758
set $inactive-bg-color   #404758
set $text-color          #f3f4f5
set $inactive-text-color #a3a3a3
set $urgent-bg-color     #e53935

#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color

bar {
  status_command i3blocks -c ~/.i3/i3blocks.conf
  i3bar_command i3bar
  tray_padding 5
  separator_symbol 
  font pango:Cantarell 11
  colors {
    background $bg-color
    separator #757575
    #                  border             background         text
    focused_workspace  $bg-color          $bg-color          $text-color
    inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
    urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
  }
}

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Enable going back and forth when trying to activate same workspace
workspace_auto_back_and_forth yes
# and also allow same explicitly with Alt+Tab
bindsym Mod1+Tab workspace back_and_forth

# start a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec gnome-terminal

# kill focused window
bindsym Mod1+F4 kill

# start dmenu (a program launcher)
bindsym Mod1+space exec rofi -show run -fuzzy -font "Cantarell 14"
bindsym $mod+space exec rofi -show drun -fuzzy -font "Cantarell 14"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
popup_during_fullscreen leave_fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# show the first scratchpad window
bindsym $mod+minus scratchpad show

set $ws1 "1  Firefox"
set $ws2 "2  Editors"
set $ws3 "3  Terminals"
set $ws4 "4  Terminals"
set $ws5 "5  Terminals"
set $ws6 "6  Chat"
set $ws7 "7  KeePass"
set $ws8 "8  Notes"
set $ws9 "9  Firefox"
set $ws10 "10  Music"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+r mode "resize"
mode "resize" {
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# notify i3blocks of NUM LOCK and CAPS LOCK
bindsym --release Num_Lock  exec pkill -SIGRTMIN+10 i3blocks
bindsym --release Caps_Lock exec pkill -SIGRTMIN+10 i3blocks

### custom bindings

# sound
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute        exec --no-startup-id amixer -D pulse set Master toggle && pkill -RTMIN+10 i3blocks
bindsym $mod+F3 exec --no-startup-id amixer -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym $mod+F2 exec --no-startup-id amixer -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym $mod+F1              exec --no-startup-id amixer -D pulse set Master toggle && pkill -RTMIN+10 i3blocks

# lock screen with Win+Shift+L
bindsym $mod+Mod1+l exec --no-startup-id i3lock -c "$bg-color"

# suspend with Win+Shift+S
bindsym $mod+Mod1+s exec --no-startup-id i3lock -c "$bg-color" && /bin/systemctl suspend -i

# move workspaces to screens right/left
bindsym $mod+Shift+Left move workspace to output left
bindsym $mod+Shift+Right move workspace to output right

# Win+Shift+p
bindsym $mod+p mode "displays"
mode "displays" {
  # "e" to set external display
  bindsym e exec --no-startup-id xrandr --output eDP1 --off --output DP1 --off --output DP2 --off --output DP2-1 --off --output DP2-8 --mode 2560x1440 --pos 0x0 --rotate normal --output VIRTUAL1 --off

  # "n" to disable external displays
  bindsym n exec --no-startup-id xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --off --output DP2 --off --output DP2-1 --off --output DP2-8 --off --output VIRTUAL1 --off

  # "b" to disable external displays
  bindsym b exec --no-startup-id xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --off --output DP2 --off --output DP2-1 --off --output DP2-8 --mode 2560x1440 --pos 1920x0 --rotate normal --output VIRTUAL1 --off

  bindsym a exec arandr # "a" to run arandr
  bindsym s exec arandr # "s" to run arandr

  bindsym j exec xbacklight -inc 2
  bindsym k exec xbacklight -dec 2

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# Marks
bindsym $mod+m exec i3-input -F 'mark %s' -P 'Mark name: '
bindsym $mod+n exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '

### custom startup commands
exec_always --no-startup-id feh --bg-fill ~/Pictures/wallpaper.jpg # set background

### common startup applications
# exec --no-startup-id dunst # notification manager
exec --no-startup-id /usr/bin/dropbox start
exec --no-startup-id /snap/bin/slack
exec --no-startup-id nm-applet &
exec --no-startup-id setxkbmap -layout "us,ru" -variant "altgr-intl," -option "grp:lalt_lshift_toggle"
exec --no-startup-id synclient VertScrollDelta=-111

### Assignments
# to find window class use `xprop`
# assign [class="Firefox"] $ws1
assign [class="gvim"] $ws2
assign [class="VirtualBox"] $ws5
assign [class="Slack"] $ws6
assign [class="Skype"] $ws6
assign [class="skypeforlinux"] $ws6

# Floating windows
for_window [class="KeePassXC"] floating enable
for_window [class="Gnome-calculator"] floating enable

# VLC floating over all workspaces
for_window [class="vlc"] sticky enable
for_window [title="Picture-in-Picture"] sticky enable
for_window [class="Skype"] sticky enable
for_window [class="skypeforlinux"] sticky enable
for_window [class="slack"] sticky enable
